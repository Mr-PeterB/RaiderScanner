#!/bin/bash


red="\e[31m"
blue="\e[34m"
lred="\e[91m"
black="\e[30m"
cyan="\e[36m"
white="\e[97m"
lblue="\e[94m"
pink="\e[95m"
green="\e[32m"
gray="\e[90m"
endc="\e[0m"


if [[ $EUID -ne 0 ]]; then
'Please run this script as root.' 1>&2
exit 1
fi

file_path=$1

if [[ (-z  "$file_path") || ($@ == "--help") || ($@ == "-h")]];then
       echo "[+] Usage: $0 [host file]
        
EXAMPLE:
$0 ~/Desktop/hosts.txt
        "
        exit 1
fi


all_down=true

if [ -f "$file_path" ]; then
echo -e "${blue}
██████╗  █████╗ ██╗██████╗ ███████╗██████╗     ███████╗ ██████╗ █████╗ ███╗   ██╗███╗   ██╗███████╗██████╗ 
